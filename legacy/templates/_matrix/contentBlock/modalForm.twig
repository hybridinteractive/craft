{% set showModal = true %}

{% if showModal %}
    <div id="modalForm" class="reveal-modal salesforce-modal" data-reveal aria-labelledby="modalFormTitle" aria-hidden="true" role="dialog" data-animation-in="slide-in">
        <div class="row">
            <div class="medium-6 medium-centered column text-center">
                {% include '_components/salesforce-signup' with {
                    'heading': block.headline,
                    'subtext': block.subtext,
                    'redirect': craft.app.request.absoluteUrl ~ '?sales_force=true',
                    'leadSource': block.leadSource,
                    'buttonText': block.buttonText
                } %}
            </div>
        </div>
        <a class="close-reveal-modal" aria-label="Close">&#215;</a>
    </div>


    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript">
        setTimeout(function () {
            $(document).ready(function(){$('#modalForm').foundation('reveal', 'open')});
        }, {{ block.delay|e('js') }});
    </script>
{% endif %}