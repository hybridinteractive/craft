{# Expects "entries", "title" #}

{% if cssModifier is not defined %}
    {% set cssModifier = '' %}
{% elseif cssModifier|slice(0, 1) != ' ' %}
    {% set cssModifier = ' ' ~ cssModifier %}
{% endif %}

<div class="sidebar right{{ cssModifier|raw }}">
    <h4 class="title">{{ title }}</h4>
    <ul class="list">
        {% for entry in entries.all() %}
            <li class="item dot">{{ entry.tipTitle }}</li>
        {% endfor %}
    </ul>
</div>