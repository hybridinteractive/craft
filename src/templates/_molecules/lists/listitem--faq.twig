{% import '_macros/atoms' as atom %}

    <div class="relative border-b-4 {{ colour != 'default' ? 'border-' ~ colour ~ '-500' : 'border-black-100' }} leading-relaxed my-8 sm:mb-3">

        <h4 class="{{- colour != 'default' ? 'bg-' ~ colour ~ '-500' : 'bg-black-100' }} flex flex-col lg:flex-row flex-no-wrap text-2xl text-4xl font-secondary font-semibold leading-snug text-white-100 p-4 print:text-black-100">
            <span class="flex-shrink text-2xl md:text-4xl lg:text-6xl inline-flex leading-none mb-4 lg:mb-0 mr-8 uppercase align-top">Q:</span>
            <span class="lg:mt-2">
                {{- atom.text(content.title) -}}
            </span>
        </h4>

        <div id="question-{{- loop.index -}}" class="flex flex-col lg:flex-row flex-no-wrap font-normal text-base text-gray-600 px-4 py-8">
            <span class="flex-shrink text-2xl md:text-4xl lg:text-6xl inline-flex mr-8 leading-none mb-4 lg:mb-0 font-bold {{ colour != 'default' ? 'text-' ~ colour ~ '-500' : 'text-black-100' }} uppercase align-top">A:</span>
            <span class="prose prose-faq">
                {{- atom.text(content.answer) -}}
            </span>
        </div>

    </div>