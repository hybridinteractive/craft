{% import '_macros/atoms' as atom %}

{%- minify -%}
    {%- if content.quoteType == 'pullQuote' -%}<aside class="clearfix inline-block w-full md:w-1/3 {{ content.position == 'left' ? 'float-left md:mr-12 md:-ml-16' : 'float-right md:ml-12 md:-mr-16' -}}">{%- endif -%}
        <blockquote {{ content.quoteSource.target ? 'cite="'~ content.quoteSource.target ~ '"' : '' }} 
        class="{{- content.type == 'pullQuote' ? 'inline-block border-t border-b py-4 py-8' : 'max-w-blockquote border-l-4 px-4 md:px-12 mx-auto w-full md:w-3/4' }} {{ colour != 'default' ? 'border-' ~ colour ~ '-500' : 'border-black-100' }} my-16">
            <p class="{{- content.type == 'pullQuote' ? 'text-base' : 'text-2xl' }} italic text-black">
                {{- atom.text(content.quote) -}}
            </p>
            {%- if content.source | length -%}
            <footer class="mt-4">
                <span class="text-gray-500 text-base hover:text-gray-700 trans-link">&mdash; {{ atom.text(content.source) -}}</span>
            </footer>
            {%- endif -%}
            {%- if content.quoteSource.getUrl() -%}
            <footer class="mt-4">
                <a href="{{- content.quoteSource.getUrl() -}}" class="text-gray-500 text-base hover:text-gray-700 trans-link">&mdash; {{ content.quoteSource.getText() -}}</a>
            </footer>
            {%- endif -%}
        </blockquote>
    {{- content.quoteType == 'pullQuote' ? '</aside>' : '' -}}
{%- endminify -%}