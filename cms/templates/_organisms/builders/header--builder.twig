{%- do craft.eagerBeaver.eagerLoadElements(entry, [
    'headerBuilder',
    'headerBuilder.heroContent:buttons',
    'headerBuilder.heroMain:buttons',
    'headerBuilder.heroMain:heroImage',
    ])
%}

{%- minify -%}
    {%- for block in content.headerBuilder -%}

        {%- switch block.type -%}

            {%- case 'heroContent' -%}

                {%- include '_organisms/heroes/hero--content' ignore missing with {
                    content: block,
                } -%}

            {%- case "heroMain" -%}

                {%- include '_organisms/heroes/hero--main' ignore missing with {
                    content: block,
                } -%}

        {%- endswitch -%}

    {%- endfor -%}
{%- endminify -%}
